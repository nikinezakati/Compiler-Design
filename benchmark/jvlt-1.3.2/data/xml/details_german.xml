<?xml version="1.0"?>
<schema lang="german">
	<class name="noun"/>
	<class name="verb"/>
	<class name="adjective"/>
	<class name="adverb"/>
	<class name="pronoun"/>
	<class name="conjunction"/>
	<class name="expression"/>
	<class name="preposition"/>
	<class name="interjection"/>
	<class name="particle"/>
	<class name="prefix"/>
	<class name="suffix"/>
	<attribute name="gender" classes="noun;pronoun">
		<choice name="feminine"/>
		<choice name="masculine"/>
		<choice name="neuter"/>
	</attribute>
	<attribute name="verb_type" classes="verb">
		<choice name="trans"/>
		<choice name="intrans"/>
		<choice name="pronominal"/>
		<choice name="impersonal"/>
	</attribute>
	<attribute name="gensi" classes="noun" group="declension"/>
	<attribute name="nompl" classes="noun" group="declension"/>
	<attribute name="pres_sg_3rd" classes="verb" group="conjugation"/>
	<attribute name="pret1" classes="verb" group="conjugation"/>
	<attribute name="pastp" classes="verb" group="conjugation"/>
</schema>

