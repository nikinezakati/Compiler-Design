<?xml version="1.0"?>
<schema lang="serbian">
	<class name="noun"/>
	<class name="verb"/>
	<class name="pron"/>
	<class name="adjective"/>
	<class name="adverb"/>
	<class name="numeral"/>
	<class name="conjunction"/>
	<class name="preposition"/>
	<class name="interjection"/>
	<class name="phrase"/>

	<attribute name="nominative" classes="noun"/>
	<attribute name="genitive" classes="noun"/>
	<attribute name="dative" classes="noun"/>
	<attribute name="accusative" classes="noun"/>
	<attribute name="vocative" classes="noun"/>
	<attribute name="instrumental" classes="noun"/>
	<attribute name="locative" classes="noun"/>

	<attribute name="gender" classes="noun">
		<choice name="feminine"/>
		<choice name="masculine"/>
		<choice name="neuter"/>
	</attribute>
	
	<attribute name="comparative" classes="adjective;adverb" group="comparison"/>
	<attribute name="superlative" classes="adjective;adverb" group="comparison"/>

	<attribute name="aspect_def" classes="adjective;adverb" group="aspect"/>
